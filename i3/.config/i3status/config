general {
    output_format = "i3bar"
    colors = true
    interval = 1
}

order += "wireless wlan0"
order += "ethernet eth0"
order += "battery 0"
order += "cpu_temperature 0"
order += "cpu_temperature 1"
order += "cpu_temperature 2"
order += "load"
order += "memory"
order += "disk /"
order += "tztime local"

load {
    format = "Load: %1min"
}
disk "/" {
    format = "Free space: %avail"
}

wireless wlan0 {
    format_up = "W: (%quality at %essid, %bitrate) %ip"
    format_down = "W: down"
}

ethernet eth0 {
    format_up = "E: %ip (%speed)"
    format_down = "E: down"
}

